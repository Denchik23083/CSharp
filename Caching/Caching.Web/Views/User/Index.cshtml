@using Caching.Db.Entities;
@model IEnumerable<User>

<a class="btn btn-success" asp-action="Create">Create</a>

<table class="table">
    <tbody>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Age</td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@user.Id">Details</a>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@user.Id">Update</a>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>    
                </td>
            </tr>            
        }
    </tbody>
</table>