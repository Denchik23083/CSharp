@inject IGameService _service

<div class="row">
    <div class="col text-center">
        <h1>Welcome!</h1>
    </div>
</div>

<div class="row">
    <div class="col text-center">
        <h1>Show all games!</h1>
    </div>
</div>

<GameListTable Games="_games"/>

<div class="row">
    <div class="col text-center">
        <button @onclick="AddNewGame" class="btn btn-success">Add New Game</button>
    </div>
</div>

@code{

    private List<Game> _games;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(2000);

        _games = _service.GetAllGames();
    }

    void AddNewGame()
    {
        _games.Add(new() { Name = "Game for test", Genre = "Test", ReleaseDate = DateTime.Today });
    }
}