@typeparam TItem

@if (ListOfItems is null)
{
    @if (NullList != null)
    {
        @NullList
    }
    else
    {
        <img src="https://miro.medium.com/max/1400/1*CsJ05WEGfunYMLGfsT2sXA.gif" height="150" />
    }
}
else if (ListOfItems.Count == 0)
{
    @if (EmptyList != null)
    {
        @NullList
    }
    else
    {
        <img src="https://cdn.akamai.steamstatic.com/steam/apps/1534200/header.jpg?t=1616065824" height="150" />
    }
}
else
{
    @foreach (var item in ListOfItems)
    {
        @ItemTemplate(item)
    }
}

@code {
    [Parameter] public RenderFragment NullList { get; set; }
    [Parameter] public RenderFragment EmptyList { get; set; }

    [Parameter] public RenderFragment<TItem> ItemTemplate { get; set; }

    [Parameter] public List<TItem> ListOfItems { get; set; }
}
