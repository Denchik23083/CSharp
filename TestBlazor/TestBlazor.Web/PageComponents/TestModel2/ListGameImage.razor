@if (ListOfItems is null)
{
    <div class="row text-center">
        <div class="col">
            <img src="https://miro.medium.com/max/1400/1*CsJ05WEGfunYMLGfsT2sXA.gif" height="500" />
        </div>
    </div>
}
else if (ListOfItems.Count == 0)
{
    <div class="row text-center">
        <div class="col">
            <img src="https://cdn.akamai.steamstatic.com/steam/apps/1534200/header.jpg?t=1616065824" height="500" />
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var item in ListOfItems)
        {
            <IndividualGameImage Game="item" />
        }
    </div>
}

@code {
    [Parameter] public List<GameImage> ListOfItems { get; set; }
}
