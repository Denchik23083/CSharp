@if (_htmlContent is not null)
{
    @((MarkupString)_htmlContent)
}

@code {
    [Parameter] public string MarkdownContent { get; set; }

    string _htmlContent;

    protected override void OnParametersSet()
    {
        _htmlContent = !string.IsNullOrWhiteSpace(MarkdownContent) 
            ? Markdown.ToHtml(MarkdownContent) 
            : null;
    }

}
