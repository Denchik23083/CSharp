@page "/books"

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>PagesCount</th>
            <th>PublishDate</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @if (Books is not null)
        {
            foreach (var item in Books)
            {
                <IndividualBooksComponent Book="item"/>
            }
        }
        else
        {
            <tr>Loading...</tr>
        }
        
        </tbody>
    </table>
    <div>
        <button class="btn btn-primary" @onclick="Add">Add</button>
    </div>
</div>