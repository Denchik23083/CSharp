@page "/counter"
@inject SingletonService _singleton
@inject TransientService _transient
@inject ScopedService _scoped

<div class="row">
    <div class="col alert alert-secondary text-center">
        <h1>Counter</h1>
    </div>
</div>

<div class="row">
    <div class="col-6 text-left">
        <button class="btn btn-primary p-3" @onclick="IncrementCount">Click me</button>
    </div>
    <div class="col-6 text-right">
        <div style="font-size: 50px">@_currentCount</div>
    </div>
</div>

<div class="row">
    <div class="col text-center">
        <input type="number" class="form-control-lg" @bind="_currentCount"/>
    </div>
</div>

<div class="row mt-3">
    <div class="col-4 text-center alert alert-primary">
        Singleton count: @_singleton.Value
    </div>
    <div class="col-4 text-center alert alert-danger">
        Transient count: @_transient.Value
    </div>
    <div class="col-4 text-center alert alert-secondary">
        Scoped count: @_scoped.Value
    </div>
</div>

@code {
    private int _currentCount = 0;

    private void IncrementCount()
    {
        _currentCount++;

        _singleton.Value = _currentCount;
        _transient.Value = _currentCount;
        _scoped.Value = _currentCount;
    }
}