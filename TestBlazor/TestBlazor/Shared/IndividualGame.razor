@if (!IsTable)
{
    <div class="row text-center alert alert-info">
        <div class="col">
            <p>@Game.Name</p>
            <p>@Game.Genre</p>
            <p>@Game.ReleaseDate.ToString("dd.MM.yyyy")</p>
        </div>
    </div>
    <div class="row">
        <div class="col offset-3">
            <button class="btn btn-danger" @onclick="Delete">Delete</button>
        </div>
        <div class="col">
            @if (_message != null)
            {
                <span class="text-danger">@_message</span>
                _message = null;
            }
        </div>
    </div>
}
else
{
    <tr>
        <td>@Game.Name</td>
        <td>@Game.Genre</td>
        <td>@Game.ReleaseDate.ToString("dd.MM.yyyy")</td>
        <td>
            
            @if (IsDisplay)
            {
                <button class="btn btn-danger" @onclick="Delete">Delete</button>
                @if (_message != null)
                {
                    <span class="text-danger pl-3">@_message</span>
                    _message = null;
                }
            }
        </td>
    </tr>
}

@code {
    [Parameter] 
    public Game Game { get; set; }
    
    [Parameter] 
    public bool IsTable { get; set; }
    
    [Parameter] 
    public bool IsDisplay { get; set; } = false;

    string _message;

    private void Delete()
    {
        _message = $"{Game.Name} deleted!";
    }
}
