@inject IBookService _bookService
@inject NavigationManager _manager

<TableBooks />

<EditForm Model="@Book" OnSubmit="EditBooks">
    <InputText id="title"  @bind-Value="Book.Title"/>
    <InputText id="author" @bind-Value="Book.Author"/>
    <InputNumber id="pagesCount" @bind-Value="Book.PagesCount"/>
    <InputDate id="publishDate" @bind-Value="Book.PublishDate"/>

    <button class="btn btn-primary" type="submit">Submit</button>

</EditForm>

@code
{
    [Parameter] public Book Book { get; set; }
    [Parameter] public int EditId { get; set; }
    [Parameter] public bool IsEdit { get; set; }

    void EditBooks()
    {
        _bookService.Update(Book, EditId);
        IsEdit = false;
        _manager.NavigateTo("/books", true);
    }
}